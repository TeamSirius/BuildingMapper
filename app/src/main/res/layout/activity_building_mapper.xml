<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".BuildingMapper"
    android:id="@+id/main_fragment_layout">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="60px"
        android:id="@+id/doneBox"
        android:text="@string/solemnly_swear"
        android:layout_above="@+id/floorImage"/>
    <ImageView
        android:id="@+id/floorImage"
        android:src="@drawable/halligan2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/floor_picker_spinner"
        />
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/floor_picker_spinner"
        android:layout_above="@+id/location_picker_spinner"/>
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/location_picker_spinner"
        android:layout_above="@+id/save_access_points_btn"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/save_access_points_btn"
        android:layout_above="@+id/where_am_i_btn"
        android:text="@string/save_access_points_btn_txt"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/where_am_i_btn"
        android:layout_alignParentBottom="true"
        android:text="@string/where_am_i_btn_txt"/>

</RelativeLayout>
