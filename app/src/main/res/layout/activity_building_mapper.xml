<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".BuildingMapper">

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_of_access_points"
        android:layout_above="@+id/room_picker_spinner"/>
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/room_picker_spinner"
        android:layout_above="@+id/location_picker_spinner"/>
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/location_picker_spinner"
        android:layout_above="@+id/get_access_points_btn"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/get_access_points_btn"
        android:layout_above="@+id/save_access_points_btn"
        android:text="@string/get_access_points_btn_txt"
        />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/save_access_points_btn"
        android:layout_above="@+id/where_am_i_btn"
        android:text="@string/save_access_points_btn_txt"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/where_am_i_btn"
        android:layout_alignParentBottom="true"
        android:text="@string/where_am_i_btn_txt"/>

</RelativeLayout>
